<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StudZ" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Background Colors -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Text and Icon Colors -->
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorOnSecondary</item>

        <!-- Error or Validation Color (Optional) -->
        <item name="android:colorError">@color/colorOnError</item>
    </style>

    <style name="Base.Theme.StudZ.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StudZ" parent="Base.Theme.StudZ" />
    <style name="ThemeOverlay.StudZ.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>